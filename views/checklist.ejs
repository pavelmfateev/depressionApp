<%- include('partials/header') %>
<div class="container">
  <form action="/checklist" method="POST">
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Question</th>
          <th scope="col">Response</th>
        </tr>
      </thead>
      <tbody>
        <% for(let i = 1; i <= question.length; i++){ %>
        <tr>
          <th scope="row"><%=i%></th>
          <td><%= question[i-1] %></td>
          <td>
            <div class="form-group">
              <div class="form-check form-check-inline">
                <input
                  class="form-check-input"
                  type="radio"
                  id="q<%=i%>_0"
                  name="<%=i%>"
                  value="0"
                />
                <label class="form-check-label" for="q1_0">0</label>
              </div>
              <div class="form-check form-check-inline">
                <input
                  class="form-check-input"
                  type="radio"
                  id="<%=i%>_1"
                  name="<%=i%>"
                  value="1"
                />
                <label class="form-check-label" for="q1_1">1</label>
              </div>
              <div class="form-check form-check-inline">
                <input
                  class="form-check-input"
                  type="radio"
                  id="<%=i%>_2"
                  name="<%=i%>"
                  value="2"
                />
                <label class="form-check-label" for="q1_2">2</label>
              </div>
              <div class="form-check form-check-inline">
                <input
                  class="form-check-input"
                  type="radio"
                  id="<%=i%>_3"
                  name="<%=i%>"
                  value="3"
                />
                <label class="form-check-label" for="q1_3">3</label>
              </div>
              <div class="form-check form-check-inline">
                <input
                  class="form-check-input"
                  type="radio"
                  id="<%=i%>_4"
                  name="<%=i%>"
                  value="4"
                />
                <label class="form-check-label" for="q1_4">4</label>
              </div>
            </div>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
    <button class="btn btn-primary" type="submit">Submit form</button>
  </form>
</div>
<%- include('partials/footer') %>
